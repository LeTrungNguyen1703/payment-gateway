{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$|.integration-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(.*\\.mjs$|@keycloak|url-join|url-template|got|@sindresorhus|camelize-ts))"
  ],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1",
    "^uuid$": "uuid"
  },
  "preset": "ts-jest"
}
